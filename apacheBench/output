<body>
    <div class="container">
        <h1>Войти</h1>
        <input type="text" id="email" placeholder="Почта" required>
        <input type="password" id="password" placeholder="Пароль" required>
        <button onclick="login()">Войти</button>
        <button class="register-button" onclick="register()">Регистрация</button>
        <button onclick="reset()">Сменить пароль</button>
    </div>
    <script>
        function login() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            if (!email || !password) {
                alert('Заполните поля');
                return;
            }

            console.log(email, password)
            fetch('/api/v1/auth/sign-in', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ password, email })
            })
            .then(response => {
                if (!response.ok) {
                    return response.json().then(data => {
                        throw new Error(data.errors || 'Неизвестная ошибка');
                    });
                }
                return response.json();  
            })
            .then(data => {
                console.log(data.Token)
                if (data.Token) {
                    localStorage.setItem('jwt', data.token);
                    console.log('Authorization token:', data.Token);
                    window.location.href = '/api/v1/app/menu';
                } else {
                    alert('Ошибка авторизации');
                }
            })
            .catch(error => alert('Пользователь не найден'));
        }

        function register() {
            window.location.href = 'sign-up';
        }

        function reset() {
            window.location.href = 'reset-password';
        }
    </script>
</body>
